<assembly>
    <id>jar-with-dependencies</id>

    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>compile</scope>
            <excludes>
                <exclude>
                    org.apache.storm:storm-core
                </exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>